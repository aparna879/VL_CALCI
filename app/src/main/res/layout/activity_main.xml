<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.aparna879.vl_calci.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/show"
            android:layout_width="474dp"
            android:layout_height="match_parent"
            android:hint="@string/ENTER" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#000">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp">
            <Button
                android:id="@+id/ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:onClick="reset"
                android:text="AC"/>

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/ac"
                android:onClick="cross"
                android:text="BACK"/>

            <Button
                android:id="@+id/divide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/back"
                android:text="/"/>

            <Button
                android:id="@+id/x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/divide"
                android:text="x"/>
            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ac"
                android:tag="7"
                android:onClick="numpad"
                android:text="7"/>
            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/back"
                android:layout_toRightOf="@id/seven"
                android:tag="8"
                android:onClick="numpad"
                android:text="8"/>
            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/divide"
                android:layout_toRightOf="@id/eight"
                android:tag="9"
                android:onClick="numpad"
                android:text="9"/>
            <Button
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/nine"
                android:layout_below="@id/x"
                android:text="-"/>
            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/seven"
                android:layout_alignParentLeft="true"
                android:tag="4"
                android:onClick="numpad"
                android:text="4"/>
            <Button
                android:id="@+id/five"
                android:tag="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/eight"
                android:layout_toRightOf="@id/four"
                android:onClick="numpad"
                android:text="5"/>
            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nine"
                android:layout_toRightOf="@id/five"
                android:tag="6"
                android:onClick="numpad"
                android:text="6"/>
            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sub"
                android:layout_toRightOf="@id/six"
                android:text="+"/>
            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/four"
                android:layout_alignParentLeft="true"
                android:tag="1"
                android:onClick="numpad"
                android:text="1"/>
            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/five"
                android:layout_toRightOf="@id/one"
                android:tag="2"
                android:onClick="numpad"
                android:text="2"/>
            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/six"
                android:layout_toRightOf="@id/two"
                android:tag="3"
                android:onClick="numpad"
                android:text="3"/>
            <Button
                android:id="@+id/perc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/one"
                android:layout_alignParentLeft="true"
                android:text="%"/>
            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/two"
                android:layout_toRightOf="@id/perc"
                android:tag="0"
                android:onClick="numpad"
                android:text="0"/>
            <Button
                android:id="@+id/dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/three"
                android:layout_toRightOf="@id/zero"
                android:tag="."
                android:onClick="numpad"
                android:text="."/>
            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add"
                android:layout_toRightOf="@id/three"
                android:height="95dp"
                android:text="="/>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>

